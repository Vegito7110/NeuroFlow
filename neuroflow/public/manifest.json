{
  "manifest_version": 3,
  "name": "NeuroFlow: Focus & Inclusion Assistant",
  "version": "1.1",
  "description": "AI-powered tools for neurodiverse focus.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}